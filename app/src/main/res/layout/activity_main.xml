<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flowz_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009900"
    tools:context="com.example.flowz.myapplication.MainActivity">

    <Button
        android:id="@+id/flowz_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="122dp"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="36dp"
        android:onClick="OnClick"
        android:text="@string/go_to_baccon" />

    <TextView
        android:id="@+id/ApplesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="129dp"
        android:layout_marginLeft="129dp"
        android:layout_marginTop="361dp"
        android:text="@string/apples"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/Applesinput"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ApplesText"
        android:layout_marginBottom="117dp"
        android:hint="@string/write_here"
        android:inputType="text" />


</RelativeLayout>